{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./out-tsc/app",
    "types": ["node"]
  },
  "files": [

    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [

    "src/**/*.ts"
  ],
  "exclude": [
"node_modules",
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
